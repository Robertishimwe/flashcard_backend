
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


generator client {
  provider = "prisma-client-js"
}


model FlashCard {
  id          Int      @id @default(autoincrement())   // 4
  createdAt   DateTime @default(now())  // 5
  category    String
  title       String
  description String
  done        Boolean
  postedBy    User?    @relation(fields: [postedById], references: [id])
  postedById  Int?
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String
  flashCards   FlashCard[]
}